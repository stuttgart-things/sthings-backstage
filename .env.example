# App Configuration
APP_TITLE=Stuttgart Things Backstage
APP_BASE_URL=http://localhost:3000

# Organization
ORGANIZATION_NAME=Stuttgart Things
# Backend Configuration
BACKEND_BASE_URL=http://localhost:7007
BACKEND_PORT=7007
CORS_ORIGIN=http://localhost:3000

# Auth
AUTH_ENVIRONMENT=development

# GitHub Integration
# Generate a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, read:org, read:user, user:email
GITHUB_TOKEN=ghp_REPLACE_WITH_YOUR_TOKEN_HERE  # pragma: allowlist secret

# GitHub OAuth App for Authentication
# Create OAuth App at: https://github.com/organizations/YOUR_ORG/settings/applications/new
# Homepage URL: http://localhost:3000
# Authorization callback URL: http://localhost:7007/api/auth/github/handler/frame
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
CLAIM_MACHINERY_API_URL=http://localhost:8080
CLAIM_MACHINERY_REGISTRY_URL=http://localhost:8090

# Backend Authentication Secret
# Generate a secure random string for production
# You can use: node -p 'require("crypto").randomBytes(24).toString("base64")'
BACKEND_SECRET=your_backend_secret_here

# Database Configuration (for production)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=backstage
# POSTGRES_PASSWORD=your_secure_password
